{
  "openapi": "3.0.0",
  "info": {
    "title": "Notes API",
    "version": "1.0.0",
    "description": "API for creating and managing notes"
  },
  "servers": [
    {
      "url": "http://206.189.199.158/api"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "Token",
        "description": "Enter your API token"
      }
    },
    "schemas": {
      "Note": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "categories": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "has_notification": {
            "type": "boolean"
          },
          "notification_datetime": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "CreateNoteRequest": {
        "type": "object",
        "required": ["title", "content"],
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the note"
          },
          "content": {
            "type": "string",
            "description": "The content of the note (supports markdown)"
          },
          "has_notification": {
            "type": "boolean",
            "description": "Whether to set a notification reminder",
            "default": false
          },
          "notification_datetime": {
            "type": "string",
            "format": "date-time",
            "description": "When to send the notification (ISO 8601 format)",
            "nullable": true
          },
          "notification_recurrence": {
            "type": "string",
            "enum": ["daily", "weekly", "monthly", "yearly"],
            "description": "How often to repeat the notification",
            "nullable": true
          }
        }
      },
      "CreateNoteResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "note": {
            "$ref": "#/components/schemas/Note"
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/notes": {
      "get": {
        "operationId": "getNotes",
        "summary": "Get all notes",
        "description": "Retrieve a list of all notes",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of notes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Note"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing API token"
          }
        }
      },
      "post": {
        "operationId": "createNote",
        "summary": "Create a new note",
        "description": "Create a new note with title and content",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateNoteRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Note created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateNoteResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing API token"
          }
        }
      }
    }
  }
}
